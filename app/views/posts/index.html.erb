<h1>Posts</h1>
<p>This is a page for posts</p>


<div>
    <p><%= image_tag @user.photo%> <%= @user.name %></p>
    <p>Number of Posts: <%= @user.posts_counter%>
</div>

<div>
    <% @posts.each do |post| %>
        <%= link_to user_post_path(@user, post) do %>
            <button> <%= post.title %> <%= post.text %> Comments: <%= post.comments_counter%> Likes: <%= post.likes_counter%></button><br>
        <% end %>
    <% end %>
</div>

<div>
    <%= link_to users_path(@user) do %>
        <button>Home</button>
    <% end %>
</div>